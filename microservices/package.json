{
  "name": "lunchday",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "pnpm -r --filter './apps/**' --filter './packages/**' build",
    "dev": "pnpm -r --parallel --filter './apps/**' dev",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "fmt": "prettier --cache --write \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "fmt:check": "prettier --check \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\" --write",
    "migrate": "pnpm -F migrations migrate",
    "migrate:up": "pnpm -F migrations migrate:up",
    "migrate:down": "pnpm -F migrations migrate:down",
    "migrate:status": "pnpm -F migrations migrate:status",
    "migrate:rollback": "pnpm -F migrations migrate:rollback",
    "db:reset": "docker exec lunch-pg psql -U postgres -d lunchday -c \"TRUNCATE TABLE market_purchases, prediction_alerts, prediction_consumption_analysis, prediction_purchase_analysis, predictions, reservation_items, reservations, stock RESTART IDENTITY CASCADE; INSERT INTO stock (ingredient, qty) VALUES ('tomato', 5), ('lemon', 5), ('potato', 5), ('rice', 5), ('ketchup', 5), ('lettuce', 5), ('onion', 5), ('cheese', 5), ('meat', 5), ('chicken', 5);\"",
    "clean:artifacts": "pnpm dlx rimraf --glob \"{apps,packages}/**/{dist,build,.turbo,.next,.nuxt,coverage,.cache,.parcel-cache,.eslintcache,.vite,.rollup.cache,.swc,*.tsbuildinfo}\"",
    "clean:modules": "pnpm dlx rimraf --glob \"{apps,packages}/**/node_modules\" node_modules",
    "clean:lock": "pnpm dlx rimraf pnpm-lock.yaml",
    "clean:store": "pnpm store prune",
    "clean:all": "pnpm run clean:artifacts && pnpm run clean:modules && pnpm run clean:store",
    "build:shared": "pnpm -F @lunch/shared-kernel build && pnpm -F @lunch/messaging build && pnpm -F @lunch/config build && pnpm -F @lunch/logger build && pnpm -F @lunch/db build && pnpm -F @lunch/redis build && pnpm -F @lunch/utils build && pnpm -F @lunch/bus build && pnpm -F @lunch/recipes build && pnpm -F @lunch/recommender-ai build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --reporter=verbose packages/**/src/__tests__/*.test.ts --exclude=**/*.integration.test.ts --exclude=**/*.e2e.test.ts",
    "test:integration": "vitest run --reporter=verbose packages/**/src/__tests__/*.integration.test.ts",
    "test:e2e": "vitest run --reporter=verbose tests/e2e/",
    "test:all": "pnpm test:unit && pnpm test:integration && pnpm test:e2e"
  },
  "devDependencies": {
    "@testcontainers/postgresql": "^11.7.1",
    "@testcontainers/rabbitmq": "^11.7.1",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/spy": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^6.6.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "testcontainers": "^11.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "version": "0.3.0",
  "dependencies": {
    "dotenv": "^17.2.2",
    "rimraf": "^6.0.1"
  }
}
