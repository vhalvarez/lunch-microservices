{
  "name": "lunchday",
  "private": true,
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build": "pnpm -r --filter './apps/**' --filter './packages/**' build",
    "dev": "pnpm -r --parallel --filter './apps/**' dev",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "fmt": "prettier --cache --write \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "fmt:check": "prettier --check \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\" --write",
    "migrate": "pnpm -F migrations migrate",
    "migrate:up": "pnpm -F migrations migrate:up",
    "migrate:down": "pnpm -F migrations migrate:down",
    "migrate:status": "pnpm -F migrations migrate:status",
    "migrate:rollback": "pnpm -F migrations migrate:rollback",
    "clean:artifacts": "pnpm dlx rimraf --glob \"{apps,packages}/**/{dist,build,.turbo,.next,.nuxt,coverage,.cache,.parcel-cache,.eslintcache,.vite,.rollup.cache,.swc,*.tsbuildinfo}\"",
    "clean:modules": "pnpm dlx rimraf --glob \"{apps,packages}/**/node_modules\" node_modules",
    "clean:lock": "pnpm dlx rimraf pnpm-lock.yaml",
    "clean:store": "pnpm store prune",
    "clean:all": "pnpm run clean:artifacts && pnpm run clean:modules && pnpm run clean:store",
    "build:shared": "pnpm -F @lunch/shared-kernel build && pnpm -F @lunch/messaging build && pnpm -F @lunch/config build && pnpm -F @lunch/logger build && pnpm -F @lunch/db build && pnpm -F @lunch/redis build && pnpm -F @lunch/utils build && pnpm -F @lunch/bus build && pnpm -F @lunch/recipes build && pnpm -F @lunch/recommender-ai build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --testNamePattern=\"Unit\"",
    "test:integration": "vitest run --testNamePattern=\"Integration\"",
    "test:contract": "vitest run --testNamePattern=\"Contract\"",
    "test:e2e": "vitest run --testNamePattern=\"E2E\""
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/spy": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "version": "0.3.0",
  "dependencies": {
    "dotenv": "^17.2.2",
    "rimraf": "^6.0.1"
  }
}
