{
  "name": "lunchday",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "build": "pnpm -r --filter './apps/**' --filter './packages/**' build",
    "dev": "pnpm -r --parallel --filter './apps/**' dev",
    "lint": "eslint .",
    "typecheck": "tsc -b",
    "start:market": "node apps/market-adapter-svc/dist/index.js",
    "fmt": "prettier --cache --write \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "fmt:check": "prettier --check \"{apps,packages,scripts}/**/*.{ts,tsx,js,json,md,yml,yaml}\"",
    "build:shared": "pnpm -F @lunch/config build && pnpm -F @lunch/shared-kernel build && pnpm -F @lunch/messaging build"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "version": "0.3.0",
  "dependencies": {
    "dotenv": "^17.2.2"
  }
}
